@page
@model ContosoUniversity.Pages.Courses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseVM.CourseID" />
            <input type="hidden" asp-for="CourseVM.DepartmentName" />
            <div class="form-group">
                <label asp-for="CourseVM.Title" class="control-label"></label>
                <input asp-for="CourseVM.Title" class="form-control" />
                <span asp-validation-for="CourseVM.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseVM.Credits" class="control-label"></label>
                <input asp-for="CourseVM.Credits" class="form-control" />
                <span asp-validation-for="CourseVM.Credits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseVM.DepartmentName" class="control-label"></label>
                <select asp-for="CourseVM.DepartmentID" class="form-control" asp-items="@Model.DepartmentNameSL"></select>
                <span asp-validation-for="CourseVM.DepartmentID" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
