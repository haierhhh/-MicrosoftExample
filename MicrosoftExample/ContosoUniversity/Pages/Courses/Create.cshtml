@model ContosoUniversity.Pages.Courses.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseVM.CourseID" class="control-label"></label>
                <input asp-for="CourseVM.CourseID" class="form-control" />
                <span asp-validation-for="CourseVM.CourseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseVM.Title" class="control-label"></label>
                <input asp-for="CourseVM.Title" class="form-control" />
                <span asp-validation-for="CourseVM.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseVM.Credits" class="control-label"></label>
                <input asp-for="CourseVM.Credits" class="form-control" />
                <span asp-validation-for="CourseVM.Credits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">院系</label>
                <select asp-for="CourseVM.DepartmentID" class ="form-control" asp-items="@Model.DepartmentNameSL">
                    <option value="">--选择院系--</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

