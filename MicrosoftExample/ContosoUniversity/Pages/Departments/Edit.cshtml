@page 
@model ContosoUniversity.Pages.Departments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartmentDto.DepartmentID" />
            <input type="hidden" asp-for="DepartmentDto.ConCurrencyToken" />
            <div class="form-group">
                <label>Version</label>
                @Utility.GetLastChars(Model.DepartmentDto.ConCurrencyToken)
            </div>
            <div class="form-group">
                <label asp-for="DepartmentDto.Name" class="control-label"></label>
                <input asp-for="DepartmentDto.Name" class="form-control" />
                <span asp-validation-for="DepartmentDto.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentDto.Budget" class="control-label"></label>
                <input asp-for="DepartmentDto.Budget" class="form-control" />
                <span asp-validation-for="DepartmentDto.Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentDto.StartDate" class="control-label"></label>
                <input asp-for="DepartmentDto.StartDate" class="form-control" />
                <span asp-validation-for="DepartmentDto.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Instructor</label>
                <select asp-for="DepartmentDto.InstructorID" class="form-control" asp-items="@Model.InstructorNameSL"></select>
                <span asp-validation-for="DepartmentDto.InstructorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
